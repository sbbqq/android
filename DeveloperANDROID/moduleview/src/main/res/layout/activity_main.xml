<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"

    tools:context="com.example.moduleview.MainActivity">

    <com.example.moduleview.developerandroid.CustomView.HelloCustomView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:text="hello,wqq"
        app:textcolor="#FFF000"/>

    <com.example.moduleview.developerandroid.CustomView.VoiceView
        android:layout_width="match_parent"
        app:width_angle="15"
        app:count="12"
        app:cicle_width="50"
        app:progress="60"

        android:layout_height="200dp"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            >
            <com.example.moduleview.developerandroid.CustomView.HelloCustomViewGroup
                android:layout_width="match_parent"
                android:background="#3FF2F0"
                android:layout_height="200dp"
                >
                <TextView
                    android:text="0"
                    android:layout_width="50dp"
                    android:background="#00f005"
                    android:layout_height="50dp"
                    />
                <TextView
                    android:text="1"
                    android:layout_width="50dp"
                    android:background="#3F92F0"
                    android:layout_height="50dp"
                    />
                <TextView
                    android:text="2"
                    android:layout_width="50dp"
                    android:background="#fF32F0"
                    android:layout_height="50dp"
                    />
                <TextView
                    android:text="3"
                    android:layout_width="50dp"
                    android:background="#3FF2F0"
                    android:layout_height="50dp"
                    />
            </com.example.moduleview.developerandroid.CustomView.HelloCustomViewGroup>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
